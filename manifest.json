{
    "display_information": {
        "name": "Claude",
        "description": "Claude Slack bot",
        "background_color": "#ce6246",
        "long_description": "This bot brings Claude to Slack. People can interact with Claude within Slack, and see others interactions with Claude. This helps everyone level up on how to use SOTA LLMs and see what they are capable of."
    },
    "features": {
        "bot_user": {
            "display_name": "Claude",
            "always_online": false
        }
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "channels:history",
                "chat:write",
                "files:read",
                "files:write",
                "reactions:write"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "message.channels"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}